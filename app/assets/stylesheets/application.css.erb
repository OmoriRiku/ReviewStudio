header {
  font-color: #fff;
  padding-bottom: 20px;
}
 
.logo {
  height: 70px;
  line-height: 70px;
}

.logo > a > img {
  border-radius: 50%;
  width: 100%;
  height: 70px;
}
 
.mv {
  margin-top: -30px;
  background-image: url(<%= asset_path "mv.jpg" %>);
  height: 70vh;
  background-size: cover;
  background-position: center;
}
 
.main-wrapper {
  margin-top: 30px;
  margin-bottom: 30px;
}
 
 .sp-only {
   display: none;
 }

.review-info {
  position: relative;
}

.review-userinfo {
  position: absolute;
  top: -2px;
  left: 58px;
  font-size: 16px;
}

.review-position {
  position:relative;
}

.store_review-rate {
  position: absolute;
  top: 20px;
  left: 58px;
}

.review-sub-info {
  position: absolute;
  top: 16px;
  left: 58px;
}

.review-sub-text {
  padding-left: 20px;
}

.review-raty > img {
  width: 15px;
  height: 15px;
}

.review-text {
  padding-left: 58px;
  margin-top: 15px;
}

@media screen and (max-width: 768px) {
  .pc-only {
    display: none;
  }
  
  .sp-only {
    display: block;
  }
  
  th {
    display: inline-block;
  }
  td {
    display: block;
  }
}