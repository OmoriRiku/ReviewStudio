<div class="container">
  <table>
    <thead>
      <tr>
        <th>用途</th>
      </tr>
    </thead>
    <tbody>
      <% @uses.each do |use| %>
      <tr>
        <td><%= link_to use.name, associated_result_path(word: use.name, studio_id: use.studios.ids) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <table>
    <thead>
      <tr>
        <th>店舗一覧</th>
      </tr>
    </thead>
    <tbody>
      <% @stores.each do |store| %>
        <tr>
          <td><%= link_to store.name, store_path(store) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render 'admin/studios/index', word: @word, studios: @studios %>
</siv>