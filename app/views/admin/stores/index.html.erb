<!-- 店舗一覧表示 -->
<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="d-flex justify-content-center align-items-center">
        <h2>店舗一覧</h2>
        <!-- 管理者がログインしている場合、新規登録のリンクを表示する -->
        <% if admin_signed_in? %>
          <%= link_to '新規登録', new_store_path, class: "btn btn-success ml-5" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-md-8 mx-auto" style="position: relative">
      <!--店舗検索フォーム-->
      <%= form_with url: stores_search_path, method: :get do |f| %>
        <table class="table table-borderless text-center">
          <tbody>
            <tr>
              <td class="text-right"><%= f.label :word, '店舗の都道府県市区町村', class: "col-form-label" %></td>
              <td><%= f.text_field :word, placeholder: '福岡県　福岡市　東区', class: "form-control" %></td>
              <%= button_tag type: "submit", class: "btn btn-default", style: "position: absolute; top: 12px; right: 20px;" do %>
                <i class="fas fa-search"></i>
              <% end %>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
  <%= render 'index', stores: @stores %>
  <div class="d-flex justify-content-center mt-3">
    <%= paginate @stores %>
  </div>
</div>