<div class="container">
  <div class="row">
    <div class="col-md-3 col-sm-10">
      <%= render 'public/uses/side_use', uses: @uses %>
      <%= render 'admin/stores/side_store', stores: @stores %>
    </div>
  <!--店舗の詳細-->
    <div class="col-md-9">
      <h2>店舗の詳細ページ</h2>
      <div class="row mt-5 d-md-flex justify-content-around align-items-center">
        <div>
          <% if @store.store_image.attached? %>
            <%= image_tag @store.store_image, size: "200x200", class: "rounded" %>
          <% else %>
            <%= image_tag 'no_image.jpg', size: "200x200", class: "rounded" %>
          <% end %>
        </div>
        <div>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>店舗名</td>
                <td><%= @store.name %></td>
              </tr>
              <% unless @store.store_reviews.average(:rate) == nil %>
              <tr>
                <td>平均評価</td>
                <td id="store_avarage-raty"></td>
                <script>
                    document.addEventListener("turbolinks:load", function() {
                        let store_avarage_elm = document.querySelector('#store_avarage-raty');
                        store_avarage_elm.textContent = '';
                        let store_avarage_val = {
                            starOn: '<%= asset_path('star-on.png') %>',
                            starOff: '<%= asset_path('star-off.png') %>',
                            readOnly: true,
                            score: <%= (@store.store_reviews.average(:rate)).ceil %>,
                        };
                        raty(store_avarage_elm,store_avarage_val);
                    });
                </script>
              </tr>
              <% end %>
              <tr>
                <td>店舗の電話番号</td>
                <td><%= @store.telephone_number %></td>
              </tr>
                <td>店舗の説明</td>
                <td><%= @store.introduction %></td>
              </tr>
              <tr>
                <td colspan="2"><%= @store.name %>のスタジオ一覧は<%= link_to 'こちら', associated_result_path(word: @store.name, studio_id: @store.studios.ids) %></td>
              </tr>
            </tbody>
          </table>
          <div>
            <% if admin_signed_in? %>
              <%= link_to '編集する', edit_store_path(@store), class: "btn btn-primary" %>
              <%= link_to '削除する', store_path(@store), method: :delete, data: { confirm: "店舗を削除してもよろしいですか？" }, class: "btn btn-danger" %>
            <% end %>
          </div>
        </div>
      </div>
      <% if end_user_signed_in? %>
      <div class="text-center mt-5">
        <%= link_to '店舗レビューを作成する', new_store_store_review_path(@store), class: "btn btn-success" %>
      </div>
      <% end %>
      <div class="mt-5">
        <%= render 'admin/store_reviews/index', store: @store %>
      </div>
    </div>
  </div>
</div>