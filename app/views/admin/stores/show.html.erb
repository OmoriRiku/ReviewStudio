<div class="container">
  <!-- 店舗の詳細 -->
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2>店舗の詳細ページ</h2>
      <div class="mt-5 d-md-flex justify-content-around align-items-center">
        <div>
          <%= image_tag @store.get_store_image(300,250), class: "rounded" %>
        </div>
        <div>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>店舗名</td>
                <td><%= @store.name %></td>
              </tr>
              <% unless @store.store_reviews.average(:rate) == nil %>
              <tr>
                <td>平均評価</td>
                <td id="store_avarage-raty"></td>
                <script>
                    document.addEventListener("turbolinks:load", function() {
                        let store_avarage_elm = document.querySelector('#store_avarage-raty');
                        store_avarage_elm.textContent = '';
                        let store_avarage_val = {
                            starOn: '<%= asset_path('star-on.png') %>',
                            starOff: '<%= asset_path('star-off.png') %>',
                            readOnly: true,
                            score: <%= (@store.store_reviews.average(:rate)).round %>,
                        };
                        raty(store_avarage_elm,store_avarage_val);
                    });
                </script>
              </tr>
              <% end %>
              <tr>
                <td>店舗の電話番号</td>
                <td><%= @store.telephone_number %></td>
              <tr>
                <td colspan="2"><%= @store.name %>のスタジオ一覧は<%= link_to 'こちら', associated_result_path(word: @store.name, studio_id: @store.studios.ids) %></td>
              </tr>
            </tbody>
          </table>
          <div>
            <% if admin_signed_in? %>
              <div class="d-flex justify-content-around">
                <%= link_to '編集する', edit_store_path(@store), class: "btn btn-primary" %>
                <%= link_to '削除する', store_path(@store), method: :delete, data: { confirm: "店舗を削除してもよろしいですか？" }, class: "btn btn-danger" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="mt-5">
        <h2>店舗の説明</h2>
        <p class="mt-5"><%= @store.introduction %></p>
      </div>
    </div>
  </div>
  <!-- 店舗レビュー -->
  <div class="row">
    <div class="col-md-8 mx-auto">
      <% if end_user_signed_in? %>
      <div class="text-center mt-5">
        <%= link_to '店舗レビューを作成する', new_store_store_review_path(@store), class: "btn btn-success" %>
      </div>
      <% end %>
      <div class="mt-5">
        <%= render 'admin/store_reviews/index', store: @store %>
      </div>
    </div>
  </div>
</div>