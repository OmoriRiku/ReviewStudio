<!-- 店舗の詳細 -->
<div class="container">
  <div class="border-bottom pb-5">
    <h2 class="text-center"><%= @store.name %>の詳細</h2>
    <div class="mt-5 row">
      <div class="col-md-6 text-center">
        <%= image_tag @store.get_store_image(300,250), class: "rounded" %>
      </div>
      <div class="col-md-6 mx-auto">
        <table class="table table-bordered" style="width: 570px;">
          <tbody>
            <tr>
              <td class="col-md-6">店舗名</td>
              <td><%= @store.name %></td>
            </tr>
            <!-- レビューのrateカラムが登録されていなければ平均評価を表示しない -->
            <% unless @store.store_reviews.average(:rate) == nil %>
            <tr>
              <td>平均評価</td>
              <td id="store_avarage-raty"></td>
            </tr>
            <script>
            document.addEventListener("turbolinks:load", function() { //  turbolinksをリロードする(ratyがページリロードをしなければ表示されないため)
                let store_avarage_elm = document.querySelector('#store_avarage-raty'); // htmlのid属性から取得する
                store_avarage_elm.textContent = ''; //  ratyの星が増え続けるバグ回避
                let store_avarage_val = { // ratyのオプションを指定
                    starOn: '<%= asset_path('star-on.png') %>', // 黄色の星をassets/imagesフォルダから読み込む
                    starOff: '<%= asset_path('star-off.png') %>', // 白色の星をassets/imagesフォルダから読み込む
                    readOnly: true, // 読み込み専用(編集はできないようにするため)
                    score: <%= (@store.store_reviews.average(:rate)).round %>, // レビューの平均値
                };
                raty(store_avarage_elm,store_avarage_val); // raty.jsへ渡す変数
            });
            </script>
            <% end %>
            <tr>
              <td>店舗の電話番号</td>
              <td><%= @store.telephone_number %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= @store.post_code %></td>
            </tr>
            <tr>
              <td>店舗の住所</td>
              <td><%= @store.address %></td>
            </tr>
          </tbody>
        </table>
        <!-- 管理者の場合編集、削除のリンク表示 -->
        <div class="mt-3">
          <% if admin_signed_in? %>
            <div class="d-flex justify-content-start">
              <%= link_to '編集する', edit_store_path(@store), class: "btn btn-primary" %>
              <%= link_to '削除する', store_path(@store), method: :delete, data: { confirm: "店舗を削除してもよろしいですか？" }, class: "btn btn-danger ml-5" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-5 pb-5 border-bottom">
    <h2 class="text-center">店舗の説明文</h2>
    <p class="mt-3 mx-auto" style="width: 60%;"><%= @store.introduction %></p>
  </div>
  <div class="mt-5 pb-5 border-bottom">
    <%= render 'admin/studios/index', word: @store.name, studios: @studios %>
  </div>
  <!-- レビュー一覧 -->
  <div class="mt-5">
    <%= render 'admin/store_reviews/index', store: @store %>
  </div>
  <!-- ユーザーがログインしていれば、レビューの新規投稿リンクを表示 -->
  <% if end_user_signed_in? %>
  <div class="text-center mb-3">
    <%= link_to '店舗レビューを作成する', new_store_store_review_path(@store), class: "btn btn-success" %>
  </div>
  <% end %>
</div>