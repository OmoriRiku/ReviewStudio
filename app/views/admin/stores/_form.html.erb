<table class="table table-borderless">
  <tbody>
    <tr>
      <td><%= f.label :name, '店舗名', class: "col-form-label" %></td>
      <td><%= f.text_field :name, class: "form-control" %></td>
    </tr>
    <tr>
      <td><%= f.label :telephone_number, '店舗の電話番号', class: "col-form-label" %></td>
      <td><%= f.text_field :telephone_number, class: "form-control" %></td>
    </tr>
    <tr>
      <td><%= f.label :store_image, '店舗の写真', class: "col-form-label" %></td>
      <td><%= f.file_field :store_image, accept: "image/*", class: "form-control-file" %></td>
    </tr>
    <tr>
      <td><%= f.label :introduction, '店舗の説明文', class: "col-form-label" %></td>
      <td><%= f.text_area :introduction, class: "form-control" %></td>
    </tr>
  </tbody>
</table>
<% if local_assigns[:edit_flag].present? %>
<div class="text-center">
  <%= f.submit '変更を保存する', class: "btn btn-success" %>
</div>
<% else %>
<div class="text-center">
  <%= f.submit '新規登録', class: "btn btn-primary" %>
</div>
<% end %>