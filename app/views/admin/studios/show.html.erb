<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto">
      <h2><%= @studio.name %>の詳細ページ</h2>
      <div class="d-md-flex justify-content-around align-items-center mt-5">
        <div class="mx-auto">
          <%= image_tag @studio.get_studio_image(300,300), class: "rounded" %>
        </div>
        <div>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>スタジオ名</td>
                <td><%= @studio.name %></td>
              </tr>
              <tr>
              <% unless @studio.studio_reviews.average(:rate) == nil %>
              <tr>
                <td>平均評価</td>
                <td id="studio_avarage-raty"></td>
                <script>
                    document.addEventListener("turbolinks:load", function() {
                        let studio_avarage_elm = document.querySelector('#studio_avarage-raty');
                        studio_avarage_elm.textContent = '';
                        let studio_avarage_val = {
                            starOn: '<%= asset_path('star-on.png') %>',
                            starOff: '<%= asset_path('star-off.png') %>',
                            readOnly: true,
                            score: <%= (@studio.studio_reviews.average(:rate)).round %>,
                        };
                        raty(studio_avarage_elm,studio_avarage_val);
                    });
                </script>
              </tr>
              <% end %>
              </tr>
              <tr>
                <td>店舗名</td>
                <td><%= @studio.store.name %></td>
              </tr>
              <tr>
                <td>用途</td>
                <td><%= @studio.use.name %></td>
              </tr>
              <tr>
                <td>個人料金(1h)</td>
                <td><%= @studio.personal_price %></td>
              </tr>
              <tr>
                <td>3名料金(1h)</td>
                <td><%= @studio.three_price %></td>
              </tr>
              <tr>
                <td>４名以上の料金(1h)</td>
                <td><%= @studio.more_price %></td>
              </tr>
            </tbody>
          </table>
          <% if admin_signed_in? %>
            <div class="d-flex justify-content-around">
              <%= link_to '編集する', edit_studio_path(@studio), class: "btn btn-success" %>
              <%= link_to '削除する', studio_path(@studio), method: :delete, data: { confirm: "スタジオを削除してもよろしいですか？" }, class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="mt-5">
        <h2>スタジオの特徴</h2>
        <p class="mt-5"><%= @studio.introduction %></p>
      </div>
      <% if end_user_signed_in? %>
      <div class="text-center mt-5">
        <%= link_to 'スタジオレビューを作成する', new_studio_studio_review_path(@studio), class: "btn btn-success" %>
        </div>
      <% end %>
      <div class="mt-5">
        <%= render 'admin/studio_reviews/index', studio: @studio %>
      </div>
    </div>
  </div>
</div>