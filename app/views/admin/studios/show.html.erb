<div class="container">
  <div class="pb-4 border-bottom">
    <h2 class="text-center"><%= @studio.name %>の詳細ページ</h2>
    <div class="row mt-5">
      <div class="col-md-6 text-center">
        <%= image_tag @studio.get_studio_image(300,300), class: "rounded" %>
      </div>
      <div class="com-md-6 mx-auto">
        <table class="table table-bordered" style="width: 560px">
          <tbody>
            <tr>
              <td style="width: 200px;">スタジオ名</td>
              <td><%= @studio.name %></td>
            </tr>
            <tr>
            <% unless @studio.studio_reviews.average(:rate) == nil %>
            <tr>
              <td>平均評価</td>
              <td id="studio_avarage-raty"></td>
              <script>
                  document.addEventListener("turbolinks:load", function() {
                      let studio_avarage_elm = document.querySelector('#studio_avarage-raty');
                      studio_avarage_elm.textContent = '';
                      let studio_avarage_val = {
                          starOn: '<%= asset_path('star-on.png') %>',
                          starOff: '<%= asset_path('star-off.png') %>',
                          readOnly: true,
                          score: <%= (@studio.studio_reviews.average(:rate)).round %>,
                      };
                      raty(studio_avarage_elm,studio_avarage_val);
                  });
              </script>
            </tr>
            <% end %>
            </tr>
            <tr>
              <td>店舗名</td>
              <td><%= link_to @studio.store.name, store_path(@studio.store) %></td>
            </tr>
            <tr>
              <td>個人料金(1h)</td>
              <td><%= @studio.personal_price %></td>
            </tr>
            <tr>
              <td>3名料金(1h)</td>
              <td><%= @studio.three_price %></td>
            </tr>
            <tr>
              <td>４名以上の料金(1h)</td>
              <td><%= @studio.more_price %></td>
            </tr>
            <tr>
              <td>使用用途</td>
              <td><%= @studio.use.name %></td>
            </tr>
          </tbody>
        </table>
        <% if admin_signed_in? %>
          <div class="d-flex justify-content-start">
            <%= link_to '編集する', edit_studio_path(@studio), class: "btn btn-success" %>
            <%= link_to '削除する', studio_path(@studio), method: :delete, data: { confirm: "スタジオを削除してもよろしいですか？" }, class: "btn btn-danger ml-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="mt-5 pb-4 border-bottom">
    <h2 class="text-center">スタジオの特徴</h2>
    <p class="mt-3 mx-auto" style="width: 60%;"><%= @studio.introduction %></p>
  </div>
  <div class="mt-5 mb-3">
    <%= render 'admin/studio_reviews/index', studio: @studio %>
  </div>
  <% if end_user_signed_in? %>
    <div class="text-center">
      <%= link_to 'スタジオレビューを作成する', new_studio_studio_review_path(@studio), class: "btn btn-success" %>
    </div>
  <% end %>
</div>