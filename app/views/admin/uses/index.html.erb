<div class="container">
  <div class="row">
    <div class="col-md-10 text-center mx-auto">
      <% if admin_signed_in? %>
       <!-- 使用用途新規登録用フォーム -->
      <h2>使用用途追加</h2>
      <div class="row mb-5">
        <div class="col-md-8 mx-auto">
          <%= render 'layouts/errors', obj: @use %>
          <%= form_with model: @use, url: uses_path, method: :post do |f| %>
            <%= render :partial => 'form', :locals => { :f => f } %>
          <% end %>
        </div>
      </div>
      <% end %>
      <!-- 使用用途一覧表示 -->
      <div class="mx-auto">
        <h2>使用用途一覧</h2>
        <table class="mt-3 table table-borderless" style="width: 100%;">
          <tbody>
            <% @uses.each do |use| %>
            <tr>
              <td><%= link_to use.name, associated_result_path(word: use.name, studio_id: use.studios.ids) %></td>
              <% if admin_signed_in? %>
                <td>
                  <%= link_to '編集する', edit_use_path(use), class: "btn btn-primary" %><%= link_to '削除する', use_path(use), method: :delete, data: { confirm: "使用用途を削除すると、スタジオもともに削除されますがよろしいですか？" }, class: "btn btn-danger ml-3" %>
                </td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
