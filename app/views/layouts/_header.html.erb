<header>
  <div>
    <div class="container d-flex">
      <h1><%= link_to 'Logo', root_path %></h1>
      <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <% if admin_signed_in? || end_user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'about', about_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to '店舗一覧', stores_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to 'スタジオ一覧', studios_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to '用途一覧', uses_path, class: "nav-link text-dark" %>
            </li>
            <% if admin_signed_in? %>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: "nav-link text-dark" %>
              </li>
              <% elsif end_user_signed_in? %>
              <li class="nav-item">
                <%= link_to 'ログアウト', destroy_end_user_session_path, method: :delete, class: "nav-link text-dark" %>
              </li>
              <li class="nav-item">
                <%= link_to edit_end_user_path(current_end_user) do %>
                  <%= image_tag current_end_user.profile_image, class: "rounded-circle", size: "40x40" %>
                <% end %>
              </li>
            <% end %>
            <% else %>
            <li class="nav-item">
              <%= link_to 'about', about_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to '店舗一覧', stores_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to 'スタジオ一覧', studios_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to '用途一覧', uses_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to '新規登録', new_end_user_registration_path, class: "nav-link text-dark" %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログイン', new_end_user_session_path, class: "nav-link text-dark" %>
            </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</header>